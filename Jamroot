import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;


exe stripes_multi :
    src/stripes_multi.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : stripes_multi : <location>$(HOME)/bin ;

exe stripes_ep4 :
src/stripes_ep4.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;
install dist : stripes_ep4 : <location>$(HOME)/bin ;

exe stripes_ep4_fix :
src/stripes_ep4_fix.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;
install dist : stripes_ep4_fix : <location>$(HOME)/bin ;



exe stripes_ep4_fix_control :
src/stripes_ep4_fix_control.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;
install dist : stripes_ep4_fix_control : <location>$(HOME)/bin ;




exe mt :
src/mt.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;
install dist : mt : <location>$(HOME)/bin ;






