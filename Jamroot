import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;


exe stripes_multi :
    src/stripes_multi.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : stripes_multi : <location>$(HOME)/bin ;


exe stripes_plane :
src/stripes_evo_plane.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;

install dist : stripes_plane : <location>$(HOME)/bin ;