import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;


exe stripes_multi :
    src/stripes_multi.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : stripes_multi : <location>$(HOME)/bin ;


exe stripes_multi_fps :
src/stripes_multi_fps.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;

install dist : stripes_multi_fps : <location>$(HOME)/bin ;


exe stripes_multi_fps_3 :
src/stripes_multi_fps_3.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;

install dist : stripes_multi_fps_3 : <location>$(HOME)/bin ;


exe stripes_ep4 :
src/stripes_ep4.cpp
/libea//libea
/libea//libea_runner
: <include>./include <link>static
;

install dist : stripes_ep4 : <location>$(HOME)/bin ;

